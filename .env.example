# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
# For SQLite (development):
DATABASE_URL=sqlite:///admissions.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@host:5432/admissions

# Azure OpenAI Configuration (HIPAA-compliant)
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4-turbo
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Application Settings
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,docx,doc,jpg,jpeg,png
PHI_STRICT_MODE=false

# Security Settings
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600
SESSION_TIMEOUT_MINUTES=15

# HIPAA Encryption (REQUIRED for production with real PHI)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# Account Lockout Settings
MAX_FAILED_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Password Policy
MIN_PASSWORD_LENGTH=12
REQUIRE_PASSWORD_COMPLEXITY=true

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=100 per hour

# Virus Scanning (REQUIRED for production HIPAA compliance)
# Install ClamAV: brew install clamav (macOS) or apt-get install clamav clamav-daemon (Linux)
# Install Python package: pip install python-clamd
# ClamAV automatically detected if clamd daemon is running

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/admissions-genie.log
